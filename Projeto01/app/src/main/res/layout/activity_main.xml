<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristielen oiiii !"
            android:textSize="30sp"
            android:textColor="#4b30a1"
            android:id="@+id/tvTopo"
    />
    
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clique aqui !"
            app:layout_constraintTop_toBottomOf="@+id/tvTopo"
            android:id="@+id/btMeio"
            android:onClick="clique1"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eu sou Sensacional"
            app:layout_constraintTop_toBottomOf="@id/btMeio"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/tvSensacional"
    />

    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="Digite aqui!"
              app:layout_constraintTop_toBottomOf="@+id/tvSensacional"
              android:id="@+id/etFrase"
              android:inputType="phone"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem Simples"
            app:layout_constraintTop_toBottomOf="@+id/etFrase"
            android:onClick="mensagemSimples"
            android:id="@+id/btMensagem"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btMensagem"
            android:text="Fazer CÃ¡lculos"
            android:onClick="calcular"

    />
</android.support.constraint.ConstraintLayout>